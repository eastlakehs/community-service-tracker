{
  "name": "@ehs-service/firebase-firestore",
  "type": "module",
  "version": "0.0.41",
  "description": "Firestore configs and authentication tests",
  "scripts": {
    "compile": "tsc",
    "test": "npm run test:full",
    "deploy": "npm run deploy:firestore",
    "test:only": "export FIRESTORE_EMULATOR_HOST=\"localhost:8080\"; export NODE_OPTIONS=--experimental-vm-modules; `npm bin`/jest --detectOpenHandles --forceExit --runInBand",
    "test:full": "npm run compile && firebase emulators:exec --ui --only firestore \"npm run test:only\"",
    "deploy:firestore": "`npm bin`/firebase deploy --only firestore"
  },
  "author": "Daniel Sudzilouski <daniel@sudzilouski.com>",
  "homepage": "https://github.com/eastlakehs/community-service-tracker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eastlakehs/community-service-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/eastlakehs/community-service-tracker/issues"
  },
  "engines": {
    "node": "16"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/node": "^14.6.4",
    "firebase-tools": "^9.8.0",
    "jest": "^28.1.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@firebase/rules-unit-testing": "^2.0.3",
    "firebase": "^9.8.4",
    "firebase-admin": "^11.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./src/*": "./dist/src/*",
    "./test/*": "./dist/test/*"
  }
}
