{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },

  "include": ["src/**/*.ts", "test/**/*.ts", "src/**/*.json"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
