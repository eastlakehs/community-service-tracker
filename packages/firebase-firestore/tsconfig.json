{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "src/**/*.json"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
